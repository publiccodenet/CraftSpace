{
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique Internet Archive identifier."
    },
    "title": {
      "type": "string",
      "description": "Title of this item."
    },
    "description": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ],
      "description": "Description of the item."
    },
    "creator": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ],
      "description": "Creator(s) of this item."
    },
    "subject": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ],
      "description": "Subject tags for this item."
    },
    "collection": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ],
      "description": "Collections this item belongs to."
    },
    "mediatype": {
      "type": "string",
      "description": "Type of media (texts, movies, audio, etc)."
    },
    "coverImage": {
      "type": "string",
      "description": "URL or path to the cover image."
    },
    "additionalProperties": {
      "type": "object",
      "additionalProperties": {},
      "description": "Additional Internet Archive metadata fields."
    }
  },
  "required": [
    "id",
    "title",
    "description",
    "creator",
    "subject",
    "collection",
    "mediatype",
    "coverImage"
  ],
  "additionalProperties": false,
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Schema for Item"
}