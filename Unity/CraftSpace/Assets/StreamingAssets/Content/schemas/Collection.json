{
  "type": "object",
  "title": "Collection",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique Internet Archive identifier for this collection."
    },
    "title": {
      "type": "string",
      "description": "Title of this collection."
    },
    "description": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ],
      "description": "Description of the collection."
    },
    "creator": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ],
      "description": "Creator(s) of this collection."
    },
    "subject": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ],
      "description": "Subject tags for this collection."
    },
    "mediatype": {
      "type": "string",
      "default": "collection",
      "description": "Type of media (always \"collection\" for collections)."
    },
    "coverImage": {
      "type": "string",
      "description": "URL or path to the cover image."
    },
    "extraFields": {
      "type": "object",
      "additionalProperties": true,
      "description": "Additional Internet Archive metadata fields."
    }
  },
  "required": [
    "id",
    "title",
    "description",
    "creator",
    "subject",
    "mediatype",
    "coverImage"
  ],
  "additionalProperties": false,
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Schema for Collection"
}