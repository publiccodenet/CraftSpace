{
  "$ref": "#/definitions/ItemSchema",
  "definitions": {
    "ItemSchema": {
      "type": "object",
      "properties": {
        "item_id": {
          "type": "string",
          "minLength": 1
        },
        "collection_id": {
          "type": "string",
          "minLength": 1
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "creator": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ]
        },
        "description": {
          "type": "string"
        },
        "date": {
          "type": "string"
        },
        "mediaType": {
          "type": "string",
          "default": "texts"
        },
        "subjects": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "lastUpdated": {
          "type": "string",
          "format": "date-time"
        },
        "files": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "size": {
                "type": "number"
              },
              "type": {
                "type": "string"
              }
            },
            "required": [
              "name",
              "size",
              "type"
            ],
            "additionalProperties": false
          },
          "default": []
        }
      },
      "required": [
        "item_id",
        "collection_id",
        "title",
        "created",
        "lastUpdated"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}